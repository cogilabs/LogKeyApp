<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LogKeyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D1B78F</item>
        <item name="colorPrimaryVariant">@color/or</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/logo2</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/logo2</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@color/logo2</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/logo1</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/logo1</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/logo1</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/logo2</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/white</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/white</item>

    </style>
    <style name="MyTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/logo2</item>
        <!--selected Item color-->
        <item name="colorControlActivated">#807D85</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@color/logo2</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/teal_700</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/logo1</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/logo2</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/logo1</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/logo2</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/white</item>

    </style>

</resources>